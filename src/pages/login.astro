---
import { useState  } from 'astro/hooks';
import Layout from '../layouts/Layout.astro'; // Asumiendo que tienes un layout base

const [error, setError] = useState('');
const [loading, setLoading] = useState(false);

async function handleSubmit(event: Event) {
    event.preventDefault();
    setLoading(true);
    setError('');

    async function handleSubmit(event: Event) {
        event.preventDefault();
        setLoading(true);
        setError('');

        const form = event.target as HTMLFormElement; // Castea event.target a HTMLFormElement
        if (form) {
            const formData = new FormData(form);
            const username = formData.get('username');
            const password = formData.get('password');

            try {
            const response = await fetch('/api/login', {
                method: 'POST',
                headers: {
                'Content-Type': 'application/json',
                },
                body: JSON.stringify({ username, password }),
            });

            const data = await response.json();

            if (response.ok) {
                console.log('Inicio de sesión exitoso:', data);
                Astro.redirect('/');
            } else {
                setError(data.message || 'Error al iniciar sesión');
            }
            } catch (err) {
            console.error('Error de red:', err);
            setError('Error de red al intentar iniciar sesión');
            } finally {
            setLoading(false);
            }
        }
    }
}
---

<Layout title="Iniciar Sesión">
  <main>
    <h1>Iniciar Sesión</h1>
    <form onsubmit={handleSubmit}>
      <div>
        <label for="username">Nombre de usuario:</label>
        <input type="text" id="username" name="username" required>
      </div>
      <div>
        <label for="password">Contraseña:</label>
        <input type="password" id="password" name="password" required>
      </div>
      <button type="submit" disabled={loading}>
        {loading ? 'Iniciando sesión...' : 'Iniciar sesión'}
      </button>
      {error && <p style="color: red;">{error}</p>}
    </form>
    <p>¿No tienes cuenta? <a href="/registro">Regístrate</a> (si aplica)</p>
    <p><a href="/recuperar-contrasena">¿Olvidaste tu contraseña?</a> (si aplica)</p>
  </main>
</Layout>