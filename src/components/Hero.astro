---
interface Props {
	title: string;
	image?: string;
}

const { title, image } = Astro.props;
---

<div class="relative ">
	{image && <img src={image} alt={title} class="w-full h-auto object-cover aspect-video" />}
	<div class="absolute top-0 left-0 w-full h-full flex flex-col justify-center items-center">
		<h1 class="text-4xl text-black text-center">{title}</h1>
	</div>
</div>
